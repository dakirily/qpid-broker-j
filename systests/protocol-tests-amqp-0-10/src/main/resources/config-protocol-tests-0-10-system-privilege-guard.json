{
  "name" : "${broker.name}",
  "modelVersion" : "9.0",

  // acceptors = 0, selectors = 1 gives => 2 selector threads + 1 acceptor thread
  // needs pool size = 2
  "context" :
  {
    "qpid.port.amqp.threadPool.size" : 2,
    "qpid.port.amqp.threadPool.numberOfSelectors" : 1
  },

  "accesscontrolproviders" :
  [
    {
      "name" : "systemBypassGuard",
      "type" : "RuleBased",
      "defaultResult" : "DENIED",
      "rules" :
      [
        // 1) If authorise() sees SYSTEM => allow (this is the bypass detector)
        { "identity" : "SYSTEM", "objectType" : "QUEUE", "operation" : "ALL", "attributes" : { }, "outcome" : "ALLOW" },

        // 2) Explicitly deny guest operating on queues (must win when Subject is guest-only)
        { "identity" : "guest", "objectType" : "QUEUE", "operation" : "ALL", "attributes" : { }, "outcome" : "DENY" },

        // 3) Keep broker usable for tests
        { "identity" : "ALL", "objectType" : "ALL", "operation" : "ALL", "attributes" : { }, "outcome" : "ALLOW" }
      ]
    }
  ],

  "authenticationproviders" :
  [
    {
      "name" : "anon",
      "type" : "Anonymous"
    },
    {
      "name" : "plain",
      "type" : "Plain",
      "secureOnlyMechanisms" : [ ],
      "users" :
      [
        { "name" : "admin", "type" : "managed", "password" : "admin" },
        { "name" : "guest", "type" : "managed", "password" : "guest" }
      ]
    }
  ],

  "ports" :
  [
    {
      "name" : "AMQP",
      "type" : "AMQP",
      "authenticationProvider" : "plain",
      "port" : "0",
      "protocols" : [ "AMQP_0_10" ],
      "virtualhostaliases" :
      [
        { "name" : "defaultAlias", "type" : "defaultAlias" },
        { "name" : "nameAlias", "type" : "nameAlias" }
      ]
    },
    {
      "name" : "ANONYMOUS_AMQP",
      "type" : "AMQP",
      "authenticationProvider" : "anon",
      "port" : "0",
      "protocols" : [ "AMQP_0_10" ],
      "virtualhostaliases" :
      [
        { "name" : "defaultAlias", "type" : "defaultAlias", "durable" : true },
        { "name" : "nameAlias", "type" : "nameAlias", "durable" : true }
      ]
    }
  ],

  "virtualhostnodes" : [ ]
}
